{#
/**
 * @file
 * Theme override for a views mini-pager (Tailwind-styled).
 */
#}

{% if items.previous or items.next %}
<nav role="navigation" aria-labelledby="{{ heading_id }}" class="flex justify-center my-8">
  <{{ pagination_heading_level }} id="{{ heading_id }}" class="sr-only">{{ 'Pagination'|t }}</{{ pagination_heading_level }}>

  <ul class="flex items-center space-x-2 bg-white rounded-xl px-4 py-2">
    {% if items.previous %}
      <li>
        <a href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}" rel="prev" {{ items.previous.attributes|without('href', 'title', 'rel') }}
           class="px-3 py-1 rounded-lg bg-primary-teal text-white font-semibold hover:bg-primary-teal/80 transition">
          ‹‹
        </a>
      </li>
    {% endif %}

    {% if items.current %}
      <li>
        <span class="px-3 py-1 rounded-lg bg-gray-100 text-gray-800 font-semibold">
          {{ 'Page'|t }} {{ items.current }}
        </span>
      </li>
    {% endif %}

    {% if items.next %}
      <li>
        <a href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next" {{ items.next.attributes|without('href', 'title', 'rel') }}
           class="px-3 py-1 rounded-lg bg-primary-teal text-white font-semibold hover:bg-primary-teal/80 transition">
          ››
        </a>
      </li>
    {% endif %}
  </ul>
  </nav>
{% endif %}
