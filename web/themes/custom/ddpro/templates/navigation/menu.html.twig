{% if items %}
  <ul class="menu-items flex space-x-8 lg:space-x-8 lg:flex-row flex-col lg:space-y-0 space-y-4">
    {% for item in items %}
      <li class="menu-item{{ item.in_active_trail ? ' active' : '' }} hover:text-primary-teal transition duration-300 block lg:inline">
        <a href="{{ item.url }}"
           class=""
            {{ item.attributes }}>
          {{ item.title }}
        </a>
        {% if item.below %}
          {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
        {% endif %}
      </li>
    {% endfor %}
  </ul>
{% endif %}